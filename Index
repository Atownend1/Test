        // Countdown timer
        let timeLeft = 24 * 60 * 60; // 24 hours in seconds
        
        function updateCountdown() {
            const hours = Math.floor(timeLeft / 3600);
            const minutes = Math.floor((timeLeft % 3600) / 60);
            const seconds = timeLeft % 60;
            
            document.getElementById('countdown').textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft > 0) {
                timeLeft--;
            }
        }
        
        // Update countdown every second
        setInterval(updateCountdown, 1000);
        updateCountdown();
        
        // Visitor count simulation
        let visitorCount = 247;
        function updateVisitors() {
            visitorCount += Math.floor(Math.random() * 3);
            document.getElementById('visitors').textContent = visitorCount;
        }
        
        // Update visitor count every 30 seconds
        setInterval(updateVisitors, 30000);
    </script>
</body>
</html>

